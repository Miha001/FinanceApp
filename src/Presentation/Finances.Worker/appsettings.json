{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "Default": ""
  },
  "CbrSettings": {
    "Url": "http://www.cbr.ru/scripts/XML_daily.asp"
  },
  "WorkerSettings": {
    "CurrencyUpdateIntervalInMinutes": 60
  }
}