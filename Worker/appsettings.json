{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "Default": "Host=127.0.0.1;Port=5432;Database=financedb;Username=admin;Password=admin;Pooling=true;Connection Idle Lifetime=300;Connection Pruning Interval=10;"
  },
  "CbrUrl": "http://www.cbr.ru/scripts/XML_daily.asp"
}